@page "/"
@using System.Globalization

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<h4>Auto-size column series</h4>

<RadzenChart>
    <RadzenColumnSeries Data="@revenue2024" CategoryProperty="Quarter" Title="2024" ValueProperty="Revenue">
        <RadzenSeriesDataLabels Visible="@showDataLabels" />
    </RadzenColumnSeries>
    <RadzenColumnSeries Data="@revenue2023" CategoryProperty="Quarter" Title="2023" ValueProperty="Revenue">
        <RadzenSeriesDataLabels Visible="@showDataLabels" />
    </RadzenColumnSeries>
    <RadzenLegend Position="LegendPosition.Top" />
    <RadzenColumnOptions Radius="2" />
    <RadzenValueAxis Formatter="@FormatAsUSD">
        <RadzenGridLines Visible="true" />
        <RadzenAxisTitle Text="利润 in USD" />
    </RadzenValueAxis>
</RadzenChart>

<h4>Line series</h4>

<RadzenChart>
    <RadzenChartTooltipOptions Shared="@true" />
    <RadzenLineSeries Data="@revenue2023" CategoryProperty="Quarter" Title="2023" LineType="LineType.Dashed" ValueProperty="Revenue">
        <RadzenMarkers Visible="true" MarkerType="MarkerType.Square" />
        <RadzenSeriesDataLabels Visible="@showDataLabels" />
    </RadzenLineSeries>
    <RadzenLineSeries Data="@revenue2024" CategoryProperty="Quarter" Title="2024" ValueProperty="Revenue">
        <RadzenMarkers Visible="true" MarkerType="MarkerType.Circle" />
        <RadzenSeriesDataLabels Visible="@showDataLabels" />
    </RadzenLineSeries>
    <RadzenCategoryAxis Padding="20" />
    <RadzenValueAxis Formatter="@FormatAsUSD">
        <RadzenGridLines Visible="true" />
        <RadzenAxisTitle Text="利润 in USD" />
    </RadzenValueAxis>
</RadzenChart>

<h4>Pan series</h4>

<RadzenChart>
    <RadzenPieSeries Data="@revenue2023" Title="Revenue" CategoryProperty="Quarter" ValueProperty="Revenue">
        <RadzenSeriesDataLabels Visible="true" />
    </RadzenPieSeries>
</RadzenChart>

